@model BertoniTestNoriarmanMVC.Models.DolarToday

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
<div class="container">
    <h2>Grupos de Cambio</h2>
    <p>Click en tasas de cambio para ver datos disponibles.</p>
    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4 class="panel-title">
                    <a data-toggle="collapse" href="#collapse1">Tasas de Cambio</a>
                </h4>
            </div>
            <div id="collapse1" class="panel-collapse collapse">
                <ul class="list-group">
                    <li class="list-group-item">DolarToday: @Model.USD.dolartoday</li>
                    <li class="list-group-item">Sicad1: @Model.USD.sicad1</li>
                    <li class="list-group-item">Sicad2: @Model.USD.sicad2</li>
                </ul>
            </div>
        </div>
    </div>
</div>

